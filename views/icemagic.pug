extends layout

block content
  - let create = `dispatch(\"icemagic/create\")`
     button.btn(class="btn-primary m1-1", onclick=create) Create
  h1= title
  - let icemagic=results;
  div(class="container-fluid mt-3")
   div(class="row m-1")
    each element in icemagic
     - let destination=`buy(\"/icemagic/update?id=${element._id}\")`
     - let detail=`buy(\"/icemagic/detail?id=${element._id}\")`
     - let del=`buy(\"/icemagic/delete?id=${element._id}\")`
     div(class="col-sm-6 bg-secondary m-1 p-3") icemagic #{element.Itemname} - #{element.Quantity} - #{element.price}
        button.btn( class="btn-info ml-2", onclick=destination ) Update
        button.btn( class="btn-dark ml-2", onclick=detail ) Get Detail
        button.btn( class="btn-warning ml-2", onclick=del ) Delete
  
